# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]

[Makefile]
indent_style = tab

[*.{js,json}]
indent_size = 2
insert_final_newline = ignore

[*.{html,css,scss}]
indent_size = 4
insert_final_newline = true

[**/vendor/**]
indent_stye = ignore
indent_size = ignore

[*.md]
trim_trailing_whitespace = false
